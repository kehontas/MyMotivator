
<%= form_for @user, html: {class: "form-horizontal center-block"} do |f| %>



    <h2 class="form-group accent-text title">Signup</h2>

  <div class="form-group">
    <%= f.label :email, "email", class: "control-label" %>
    <%= f.text_field :email, :required => true, class: "form-control accent-text" %>
  </div>
  <div class="form-group">
    <%= f.label :first_name, "first name", class: "control-label" %>
    <%= f.text_field :first_name, :required => true, class: "form-control accent-text" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "last name", class: "control-label" %>
    <%= f.text_field :last_name, :required => true, class: "form-control accent-text" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "password", class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-default form-control" %>
  </div>

<% end %>
